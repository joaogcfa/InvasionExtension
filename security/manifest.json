{
    "manifest_version": 2,
    "name": "Security",
    "version": "1.0",
    "applications": {
        "gecko": {
            "id": "security@mozilla.org"
        }
    },
    "permissions": [
        "http://*/*",
        "https://*/*",
        "tabs",
        "cookies",
        "<all_urls>"
    ],
    "browser_action": {
        "default_icon": "icons/padlock.png",
        "default_title": "Security",
        "default_popup": "popup/security.html"
    }
}